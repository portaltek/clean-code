{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates S3 bucket to contain ELB logging records for a given environment.",
  "Parameters": {
    "Environment": {
      "Description": "Application Environment",
      "Type": "String",
      "Default": "dv",
      "AllowedValues": [
        "dv",
        "qa",
        "pt",
        "st",
        "pr"
      ]
    },
    "BucketName": {
      "Description": "Name of Logging Bucket",
      "Type": "String",
      "Default": "dev-web-access-logs"
    }
  },
  "Mappings": {
    "Principal": {
      "us-east-1": {
        "id": "127311923021"
      },
      "us-west-1": {
        "id": "027434742980"
      },
      "us-west-2": {
        "id": "797873946194"
      }
    }
  },
  "Resources": {
    "AccessLogBucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Retain",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "VersioningConfiguration": {
          "Status": "Enabled"
        },
        "LifecycleConfiguration": {
          "Rules": [
            {
              "Id": "GlacierRule",
              "Prefix": "glacier",
              "Status": "Enabled",
              "ExpirationInDays": "365",
              "Transition": {
                "TransitionInDays": "1",
                "StorageClass": "Glacier"
              }
            }
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "BucketName"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "AccessLogBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "DeletionPolicy": "Retain",
      "Properties": {
        "Bucket": {
          "Ref": "AccessLogBucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "s3:PutObject"
              ],
              "Effect": "Allow",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:s3:::",
                      {
                        "Ref": "BucketName"
                      },
                      "/*"
                    ]
                  ]
                }
              ],
              "Principal": {
                "AWS": {
                  "Fn::FindInMap": [
                    "Principal",
                    {
                      "Ref": "AWS::Region"
                    },
                    "id"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}




